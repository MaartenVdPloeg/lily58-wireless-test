/*
 * Lily58 Keymap met RGB controls op LOWER layer
 * RGB gaat automatisch aan via de config file
 * Place this in config/lily58.keymap
 */

#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/outputs.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// ------------------------------------------------------------------------------------------------------------
// |  ESC  |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |   `   |
// |  TAB  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   |   -   |
// |  CTRL |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
// | SHIFT |  Z  |  X  |  C   |  V   |  B   |   "["  |  |  "]"  |  N   |  M    |  ,    |  .   |   /   | SHIFT |
//                     | ALT  | GUI  | LOWER|  SPACE |  | ENTER | RAISE| BSPC  | GUI   |
            bindings = <
&kp ESC   &kp N1 &kp N2 &kp N3   &kp N4   &kp N5                     &kp N6 &kp N7   &kp N8    &kp N9  &kp N0   &kp GRAVE
&kp TAB   &kp Q  &kp W  &kp E    &kp R    &kp T                      &kp Y  &kp U    &kp I     &kp O   &kp P    &kp MINUS
&kp LCTRL &kp A  &kp S  &kp D    &kp F    &kp G                      &kp H  &kp J    &kp K     &kp L   &kp SEMI &kp SQT
&kp LSHFT &kp Z  &kp X  &kp C    &kp V    &kp B  &kp LBKT   &kp RBKT &kp N  &kp M    &kp COMMA &kp DOT &kp FSLH &kp RSHFT
                        &kp LALT &kp LGUI &mo 1  &kp SPACE  &kp RET  &mo 2  &kp BSPC &kp RGUI
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        lower_layer {
// ------------------------------------------------------------------------------------------------------------
// | BTCLR | BT1  | BT2  |  BT3  |  BT4  |  BT5 |                |RGB ON|RGB EFF|RGB HU+|RGB SA+|RGB BR+|RGB SP+|
// |  F1   |  F2  |  F3  |  F4   |  F5   |  F6  |                |  F7  |  F8   |  F9   |  F10  |  F11  |  F12  |
// |   `   |  !   |  @   |  #    |  $    |  %   |                |  ^   |  &    |  *    |  (    |   )   |   ~   |
// | POWER |      |      |RGB HU-|RGB SA-|RGB BR-|      |  |     |  +   |  -    |  =    |  [    |   ]   |   \   |
//                       |       |       |      |      |  |      |      |       |       |
            bindings = <
&bt BT_CLR        &bt BT_SEL 0    &bt BT_SEL 1    &bt BT_SEL 2    &bt BT_SEL 3    &bt BT_SEL 4                     &rgb_ug RGB_TOG &rgb_ug RGB_EFF &rgb_ug RGB_HUI &rgb_ug RGB_SAI &rgb_ug RGB_BRI &rgb_ug RGB_SPI
&kp F1            &kp F2          &kp F3          &kp F4          &kp F5          &kp F6                           &kp F7          &kp F8          &kp F9          &kp F10         &kp F11         &kp F12
&kp GRAVE         &kp EXCL        &kp AT          &kp HASH        &kp DOLLAR      &kp PRCNT                        &kp CARET       &kp AMPS        &kp STAR        &kp LPAR        &kp RPAR        &kp TILDE
&ext_power EP_TOG &trans          &trans          &rgb_ug RGB_HUD &rgb_ug RGB_SAD &rgb_ug RGB_BRD &trans   &trans  &kp KP_PLUS     &kp MINUS       &kp EQUAL       &kp LBKT        &kp RBKT        &kp BSLH
                                                  &trans          &trans          &trans          &trans   &trans  &trans          &trans          &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        raise_layer {
// ------------------------------------------------------------------------------------------------------------
// |       |      |      |       |       |      |                |      |       |       |       |       |       |
// |   `   |  1   |  2   |  3    |  4    |  5   |                |  6   |   7   |   8   |  9    |   0   |  DEL  |
// |  F1   |  F2  |  F3  |  F4   |  F5   |  F6  |                | LEFT | DOWN  |  UP   | RIGHT |       |       |
// |  F7   |  F8  |  F9  |  F10  |  F11  |  F12 |      |  |      | HOME | END   | PGDN  | PGUP  |       |       |
//                       |       |       |      |      |  |      |      |       |       |
            bindings = <
&trans    &trans &trans &trans  &trans  &trans                       &trans    &trans   &trans   &trans    &trans  &kp DEL
&kp GRAVE &kp N1 &kp N2 &kp N3  &kp N4  &kp N5                       &kp N6    &kp N7   &kp N8   &kp N9    &kp N0  &kp DEL
&kp F1    &kp F2 &kp F3 &kp F4  &kp F5  &kp F6                       &kp LEFT  &kp DOWN &kp UP   &kp RIGHT &trans  &trans
&kp F7    &kp F8 &kp F9 &kp F10 &kp F11 &kp F12   &trans   &trans    &kp HOME  &kp END  &kp PG_DN &kp PG_UP &trans  &trans
                        &trans  &trans  &trans    &trans   &trans    &trans    &trans   &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };
    };
};
